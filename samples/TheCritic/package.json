    "@typescript-eslint/parser": "^6.12.0",
    "dotenv": "^16.3.1",
    "tsx": "^4.4.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vite-plugin-full-reload": "^1.1.0",
    "vite-plugin-top-level-await": "^1.3.1",
